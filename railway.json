{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python manage.py migrate --noinput && gunicorn flashcard_app.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 120 --log-file -",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "releaseCommand": "python manage.py migrate --noinput"
  }
}

